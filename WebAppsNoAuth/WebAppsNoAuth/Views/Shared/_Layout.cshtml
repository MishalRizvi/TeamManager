                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="UpdateUser" style="color:maroon">Users</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="UpdateTeam" style="color:maroon">Teams</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="UpdateEntitlements" style="color:maroon">Entitlements</a>
                                        </li>
                                    }
                                }
                                @{
                                    if (ViewData["Manager"] != null && ViewData["Manager"].ToString() == "True")
                                    {
                                        <li class="nav-item">
                                            <a class="nav-link" asp-area="" asp-controller="Manager" asp-action="ApproveRequest" style="color:maroon">Requests</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" asp-area="" asp-controller="Manager" asp-action="Projects" style="color:maroon">Projects</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" asp-area="" asp-controller="Manager" asp-action="EmployeeAnalytics" style="color:maroon">Employee Analytics</a>
                                        </li>
                                    }
                                }
                            </ul>
                            <ul class="nav navbar navbar-right">
                                <li>
                                    <button style="border:none; background-color:maroon; color:white" data-toggle="modal" data-target="#layoutModal">@ViewData["Username"]</button>
                                </li>
                                <li>
                                    <div class="avatar">
                                        <div class="user-icon font18" style="opacity:1" data-toggle="modal" data-target="#layoutModal" onclick="openProfile()">
                                            <span class="amber" id="statusColour"></span>
                                        </div>

                                    </div>
