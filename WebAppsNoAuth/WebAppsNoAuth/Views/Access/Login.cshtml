@model WebAppsNoAuth.Models.User;

<section class="vh-100" style="background-color: #9A616D;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
                <div class="card" style="border-radius: 1rem;">
                    <div class="row g-0">

                        <div class="col-md-6 col-lg-5 d-none d-md-block">
                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img2.webp"
                                 alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                        </div>

                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">
                                <form asp-controller="Access" asp-action="Login" method="post">
                                    <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Login</h5>
                                    <div class="form-outline mb-4">
                                        <label class="form-label" for="email">Email address</label>
                                        <input type="email" id="email" class="form-control form-control-lg" asp-for="Email" />
                                    </div>
                                    <div class="form-outline mb-4">
                                        <label class="form-label" for="password">Password</label>
                                        <input type="password" id="password" class="form-control form-control-lg" asp-for="Password" />
                                    </div>
                                    <div class="pt-1 mb-4">
                                        <button class="btn btn-dark btn-lg btn-block" type="submit" id="loginButton">Login</button>
                                    </div>

                                    <a class="small text-muted" href="/Home/ForgotPassword">Forgot password?</a>
                                    <p class="mb-5 pb-lg-2" style="color: #393f81;">
                                        Don't have an account? <a href="/Access/Register" style="color: #393f81;">Register here</a>
                                    </p>
                                    @if (ViewData["ValidateMessage"] != null)
                                    {
                                        <br />
                                        <br />
                                        <label>@ViewData["ValidateMessage"]</label>
                                    }
                                </form>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>$(document).ready(function () {
            console.log("ready!");
            $("#loginButton").on("click", validateUser);
        });

        function validateUser() {
            $.ajax({
                url: "/Home/ValidateUser/",
                data: {
                    email: document.getElementById("email").value,
                    password: document.getElementById("password").value,
                },
                cache: false,
                success: function (result) {
                    console.log(result);
                }
            })
            return;
        }</script>


}